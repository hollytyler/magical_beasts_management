{% extends 'base.jinja' %}

{% block content %}

  <h1>{{ keeper.name }}</h1>
  
  <h2>Hold: {{ keeper.name_of_hold }}</h2>

  <h1>Beasts:</h1>
  
  <form action="/keepers/{{ keeper.id }}/add" methods="POST">
    <input type="submit" value="add"/>
    <label for="beast">Select a Beast:</label>
      <select name="beast" id="beast">
        {% for beast in beasts %}
          <option value="{{beast.id}}"> {{ beast.name }}</option>
        {% endfor %}
      </select>
  </form>

    {% for beast in keeper.beasts %}
    <ul>
      <li>
      <h2>{{ beast.name }}</h2>
      <h3>{{ beast.dob }}</h3>
      <h3>{{ beast.species }}</h3>
      <h3>{{ beast.native_to }}</h3>
      </li>
    </ul>
    {% endfor %}

{% endblock content %}