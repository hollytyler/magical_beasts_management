{% extends 'base.jinja' %}

{% block content %}
  <div class="beast-content">
  <h1>Our Beasts and Where They Reside</h1>
{% for beast in beasts %}
  <h1>{{ beast.name }}</h1>
  <h2>Date of Birth: {{ beast.dob }}</h2>
  <h2>Species: {{ beast.species }}</h2>
  <h2>Ailment: {{ beast.ailment }}</h2>
  <h2>Keeper: {{ beast.keeper.name }} Hold: {{ beast.keeper.name_of_hold }}</h2>
  </div>

  <div class="delete-beast">
    <form 
    class="delete-form"
    action="beasts/{{ beast.id }}/delete"
    method="POST">
    
      <input class="delete-button" type="submit" value="delete" />

    </form>
  </div>

{% endfor %}


{% endblock content %}